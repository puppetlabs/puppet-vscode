{
  "if": {
    "prefix": "if",
    "body": [
      "if ${1:condition} {",
      "\t${2:# when true}",
      "}",
      "else {",
      "\t${3:# when false}",
      "}"
    ],
    "description": "Conditional statement"
  },
  "unless": {
    "prefix": "unless",
    "body": [
      "unless ${1:condition} {",
      "\t${2:# when false}",
      "}",
      "else {",
      "\t${2:# when true}",
      "}"
    ],
    "description": "Conditional statement"
  },
  "case": {
    "prefix": "case",
    "body": [
      "case ${1:condition} {",
      "\t'${2:value}': { } ",
      "\tdefault: { }",
      "}"
    ],
    "description": "Conditional case statement"
  },
  "mod-name":{
    "prefix":"mod",
    "body":[
      "mod '${1:name}',"
    ],
    "description": "Adds a module to a Puppetfile"
  },
  "mod-gitref":{
    "prefix":"mod",
    "body":[
      "mod '${1:name}',",
      "\t:git => '${2:giturl}',",
      "\t:ref => '${3:gitref}',"
    ],
    "description": "Adds a module to a Puppetfile"
  }
}
